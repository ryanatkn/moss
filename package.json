  "files": [
    "dist",
    "src/lib/**/*.ts",
    "!src/lib/**/*.test.*",
    "!dist/**/*.test.*"
  ],
  "exports": {
    "./package.json": "./package.json",
    "./*.js": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    },
    "./*.css": {
      "default": "./dist/*.css"
    }
